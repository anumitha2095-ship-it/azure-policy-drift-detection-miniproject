{
  "properties": {
    "displayName": "Detect Unauthorized RBAC Assignment",
    "policyType": "Custom",
    "mode": "All",
    "description": "To detect the configuration drift when un authorized user get storage account access",
    "metadata": {
      "category": "Storage",
      "createdBy": "Azure_AD_Object_ID",
      "createdOn": "2025-12-28T11:51:16.2286959Z",
      "updatedBy": "Azure_AD_Object_ID",
      "updatedOn": "2025-12-30T22:06:22.5653071Z"
    },
    "version": "1.0.0",
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Authorization/roleAssignments"
          },
          {
            "field": "Microsoft.Authorization/roleAssignments/principalId",
            "equals": "Azure_AD_Object_ID"
          }
        ]
      },
      "then": {
        "effect": "audit"
      }
    },
    "versions": [
      "1.0.0"
    ]
  }
}
