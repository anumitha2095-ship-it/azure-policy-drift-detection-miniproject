Remediate-Storage-Public-Access 

{
  "properties": {
    "displayName": "Remediate-Storage-Public-Access",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "",
    "metadata": {
      "category": "Storage",
      "createdBy": "Azure_AD_Object_ID",
      "createdOn": "2025-12-29T01:59:14.9822336Z",
      "updatedBy": null,
      "updatedOn": null
    },
    "version": "1.0.0",
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Storage/storageAccounts"
          },
          {
            "field": "Microsoft.Storage/storageAccounts/allowBlobPublicAccess",
            "equals": true
          }
        ]
      },
      "then": {
        "effect": "modify",
        "details": {
          "roleDefinitionIds": [
            "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
          ],
          "operations": [
            {
              "operation": "addOrReplace",
              "field": "Microsoft.Storage/storageAccounts/allowBlobPublicAccess",
              "value": false
            }
          ]
        }
      }
    },
    "versions": [
      "1.0.0"
    ]
  },
