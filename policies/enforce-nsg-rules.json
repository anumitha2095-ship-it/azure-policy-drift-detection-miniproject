Deny-Subnet-Without-NSG 

{
  "properties": {
    "displayName": "Deny-Subnet-Without-NSG",
    "policyType": "Custom",
    "mode": "All",
    "description": "",
    "metadata": {
      "category": "Network Security",
      "createdBy": "Azure_AD_Object_ID",
      "createdOn": "2025-12-29T12:04:54.8737545Z",
      "updatedBy": null,
      "updatedOn": null
    },
    "version": "1.0.0",
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Network/virtualNetworks/subnets"
          },
          {
            "field": "Microsoft.Network/virtualNetworks/subnets/networkSecurityGroup.id",
            "exists": false
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    },
    "versions": [
      "1.0.0"
    ]
  }
}
